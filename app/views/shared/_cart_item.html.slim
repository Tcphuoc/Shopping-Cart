.row
  .col-md-6.align-self-center
    = image_tag item.product.image.variant(:thumb_smaller), class: "image-item"
    p = item.name
    p = display_price(item.price)
  .col-md-2.align-self-center
    p = item.quantity
  .col-md-2.align-self-center
    p = display_price(item.price * item.quantity)
  .col-md-2.align-self-center
    = form_with(model: @cart, local: true) do |f|
      = f.hidden_field :product_id, value: item.product_id
      = f.hidden_field :quantity, value: -item.quantity
      = f.submit "Remove item", class: "btn btn-outline-dark"
    = form_with(model: @cart, local: true) do |f|
      = f.hidden_field :product_id, value: item.product_id
      = f.hidden_field :quantity, value: 1
      = f.submit "Add one", class: "btn btn-outline-dark"
    = form_with(model: @cart, local: true) do |f|
      = f.hidden_field :product_id, value: item.product_id
      = f.hidden_field :quantity, value: -1
      = f.submit "Reduce one", class: "btn btn-outline-dark"
hr
